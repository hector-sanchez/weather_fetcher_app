<main class="min-h-screen flex flex-col items-center justify-center bg-white">
	<div class="flex flex-col items-center">
    <h2 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-2 text-center">
      Wanna get the weather for your town?
    </h2>

    <%= form_with url: weather_search_path, method: :post, local: true, data: { turbo: "false" }, class: "w-full max-w-5xl" do |form| %>
      <div class="flex items-center border border-gray-200 rounded-xl overflow-hidden shadow-sm mb-4">
        <%= form.text_field :address,
          placeholder: "e.g. 123 Main Street, Anytown, CA 12345",
          class: "flex-grow pl-4 py-3 text-gray-700 placeholder-gray-400 focus:outline-none" %>

        <%= form.submit "Search",
          class: "px-6 py-3 bg-blue-600 text-white font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>

    <%= render 'notifications' %>
    <%= render 'weather_details', weather_presenter: @weather_presenter %>
	</div>
</main>
